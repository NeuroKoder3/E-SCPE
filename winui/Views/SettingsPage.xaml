<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="EscpeWinUI.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Content>
        <ScrollViewer Padding="16">
            <StackPanel Spacing="12">
                <TextBlock FontSize="22" FontWeight="SemiBold" Text="Settings" />

                <TextBlock FontWeight="SemiBold" Text="Logging" />
                <TextBlock Text="Log level" />
                <ComboBox x:Name="LogLevelBox">
                    <ComboBoxItem Content="trace" />
                    <ComboBoxItem Content="debug" />
                    <ComboBoxItem Content="info" />
                    <ComboBoxItem Content="warn" />
                    <ComboBoxItem Content="error" />
                </ComboBox>

                <TextBlock FontWeight="SemiBold" Text="Default Paths" />
                <TextBlock Text="Ledger DB path" />
                <TextBox x:Name="DefaultDbPathBox" />
                <TextBlock Text="Keys directory" />
                <TextBox x:Name="DefaultKeysDirBox" />
                <TextBlock Text="Compliance output directory" />
                <TextBox x:Name="DefaultOutDirBox" />

                <TextBlock FontWeight="SemiBold" Text="License" />
                <TextBlock Text="License file path" />
                <TextBox x:Name="LicensePathBox" />

                <TextBlock FontWeight="SemiBold" Text="Security" />
                <ToggleSwitch x:Name="DbEncryptionToggle" Header="Enable DB encryption" />

                <Button Content="Save Settings" Click="OnSaveClicked" Style="{StaticResource PrimaryAction}" />
            </StackPanel>
        </ScrollViewer>
    </Page.Content>
</Page>
